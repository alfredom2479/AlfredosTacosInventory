extends layout 

block content 
  h1=title

  form(method='POST' action='')
    .form-group 
      label(for='name') Name:
      input#name.form-control(type='text' name='name' value=(category===undefined ? '' : category.name))
    .form-group 
      label(for='description') Description: 
      input#description.form-control(type='text' name='description' value=(category===undefined ? '': category.description))

    button.btn.btn-primary(type='submit') Submit

    if errors 
      ul 
        for error in erros 
          li!=error.msg